{
    "name": "handyman",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint"
    },
    "dependencies": {
        "autoprefixer": "10.3.6",
        "next": "11.1.2",
        "postcss": "8.3.8",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "tailwindcss": "2.2.16"
    },
    "devDependencies": {
        "@types/react": "17.0.24",
        "eslint": "7.32.0",
        "eslint-config-airbnb": "18.2.1",
        "eslint-config-next": "11.1.2",
        "typescript": "4.4.3"
    },
    "eslintConfig": {
        "extends": [
            "airbnb",
            "plugin:react/recommended",
            "next/core-web-vitals"
        ],
        "rules": {
            "jsx-a11y/anchor-is-valid": "off",
            "import/extensions": [
                "error",
                "ignorePackages",
                {
                    "js": "never",
                    "jsx": "never",
                    "ts": "never",
                    "tsx": "never"
                }
            ],
            "react/jsx-filename-extension": [
                1,
                {
                    "extensions": [
                        ".tsx",
                        ".ts"
                    ]
                }
            ]
        }
    }
}
